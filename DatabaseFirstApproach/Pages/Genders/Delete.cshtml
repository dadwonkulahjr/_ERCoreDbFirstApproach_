@page "{id:int?}"
@model DatabaseFirstApproach.Pages.Genders.DeleteModel

@{
    ViewData["Title"] = "Delete Existing Gender";
}

<h1 class="text-info">Delete Confirmation</h1>
<hr />
<div class="alert alert-danger m-2">
    <h5>
        Are you sure you want to delete this gender @Model.TblGender.Sex? 
    </h5>
    <form method="post">
        <input type="hidden" asp-for="TblGender.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="/Genders/Index" class="btn btn-primary">No</a>
    </form>
</div>
