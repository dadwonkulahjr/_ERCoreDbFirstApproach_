@page "{id:int?}"
@model DatabaseFirstApproach.Pages.Employees.DeleteModel

@{
    ViewData["Title"] = "Delete Existing Employee";
}

<h1 class="text-info">Delete Confirmation</h1>
<hr />
<div class="alert alert-danger m-2">
    <h5>
        Are you sure you want to Delete employee @Model.TblEmployees.Name?
    </h5>
    <form method="post">
        <input type="hidden" asp-for="TblEmployees.EmployeeId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="/Employees/Index" class="btn btn-primary">No</a>
    </form>
</div>

