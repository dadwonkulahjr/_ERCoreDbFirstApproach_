<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TblEmployees[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblEmployees[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblEmployees[0].Salary)
            </th>
            <th>
